<Window x:Class="ClickAutomation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Click Automation - Anti Inatividade" 
        Height="500" Width="400"
        MinHeight="450" MinWidth="350"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        ResizeMode="CanMinimize"
>
    
    <Window.Resources>
        <!-- AnimaÃ§Ã£o de pulso para o indicador de status -->
        <Storyboard x:Key="StatusPulse" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="1.0" To="0.3" Duration="0:0:1"
                           AutoReverse="True"/>
        </Storyboard>
        
        <!-- AnimaÃ§Ã£o de click -->
        <Storyboard x:Key="ClickEffect" x:Name="ClickEffect">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                           From="1.0" To="1.3" Duration="0:0:0.2"
                           AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                           From="1.0" To="1.3" Duration="0:0:0.2"
                           AutoReverse="True"/>
        </Storyboard>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="ðŸ–±ï¸ Click Automation" 
                          FontSize="24" FontWeight="Bold" 
                          Foreground="{StaticResource TextBrush}"
                          HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="Mantenha-se ativo automaticamente" 
                          FontSize="14" 
                          Foreground="{StaticResource TextSecondaryBrush}"
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- ConteÃºdo Principal -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- ConfiguraÃ§Ã£o de Intervalo -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="â±ï¸ ConfiguraÃ§Ã£o de Intervalo" 
                                  FontSize="16" FontWeight="SemiBold" 
                                  Foreground="{StaticResource TextBrush}" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Intervalo entre cliques:" 
                                  FontSize="12" 
                                  Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Slider x:Name="IntervalSlider" 
                                   Grid.Column="0"
                                   Style="{StaticResource ModernSlider}"
                                   Minimum="1" Maximum="300" 
                                   Value="30" 
                                   ValueChanged="IntervalSlider_ValueChanged"
                                   Margin="0,0,15,0"/>
                            
                            <TextBlock x:Name="IntervalValue" 
                                      Grid.Column="1"
                                      Text="30 segundos" 
                                      FontSize="14" FontWeight="SemiBold"
                                      Foreground="{StaticResource PrimaryBrush}"
                                      VerticalAlignment="Center"
                                      MinWidth="80"/>
                        </Grid>
                        
                        <TextBlock Text="Recomendado: 30-60 segundos para Teams" 
                                  FontSize="11" 
                                  Foreground="{StaticResource TextSecondaryBrush}" 
                                  Margin="0,10,0,0" 
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Status e Controles -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="ðŸŽ® Controles" 
                                  FontSize="16" FontWeight="SemiBold" 
                                  Foreground="{StaticResource TextBrush}" Margin="0,0,0,15"/>
                        
                        <!-- Indicador de Status -->
                        <Border x:Name="StatusIndicator" 
                               Background="{StaticResource ErrorBrush}" 
                               CornerRadius="20" 
                               Width="20" Height="20" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,15">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                        </Border>
                        
                        <TextBlock x:Name="StatusText" 
                                  Text="Parado" 
                                  FontSize="14" FontWeight="SemiBold"
                                  Foreground="{StaticResource TextBrush}"
                                  HorizontalAlignment="Center" Margin="0,0,0,20"/>
                        
                        <!-- BotÃµes de Controle -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button x:Name="StartButton" 
                                   Content="â–¶ï¸ Iniciar" 
                                   Style="{StaticResource ModernButton}"
                                   Click="StartButton_Click"
                                   Width="120" Margin="0,0,15,0"/>
                            
                            <Button x:Name="StopButton" 
                                   Content="â¹ï¸ Parar" 
                                   Style="{StaticResource StopButton}"
                                   Click="StopButton_Click"
                                   Width="120"
                                   IsEnabled="False"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- EstatÃ­sticas -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="ðŸ“Š EstatÃ­sticas" 
                                  FontSize="16" FontWeight="SemiBold" 
                                  Foreground="{StaticResource TextBrush}" Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Cliques realizados:" 
                                      FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock x:Name="ClickCount" Grid.Row="0" Grid.Column="1" 
                                      Text="0" FontSize="12" FontWeight="SemiBold" 
                                      Foreground="{StaticResource TextBrush}" 
                                      HorizontalAlignment="Right"/>
                            
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Tempo ativo:" 
                                      FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock x:Name="ActiveTime" Grid.Row="1" Grid.Column="1" 
                                      Text="00:00:00" FontSize="12" FontWeight="SemiBold" 
                                      Foreground="{StaticResource TextBrush}" 
                                      HorizontalAlignment="Right"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="PrÃ³ximo click em:" 
                                      FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock x:Name="NextClick" Grid.Row="2" Grid.Column="1" 
                                      Text="--:--" FontSize="12" FontWeight="SemiBold" 
                                      Foreground="{StaticResource PrimaryBrush}" 
                                      HorizontalAlignment="Right"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- InformaÃ§Ãµes -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="â„¹ï¸ InformaÃ§Ãµes" 
                                  FontSize="16" FontWeight="SemiBold" 
                                  Foreground="{StaticResource TextBrush}" Margin="0,0,0,10"/>
                        
                        <TextBlock TextWrapping="Wrap" FontSize="11" 
                                  Foreground="{StaticResource TextSecondaryBrush}">
                            <Run Text="â€¢ O software clica com o botÃ£o direito do mouse na posiÃ§Ã£o atual"/>
                            <LineBreak/>
                            <Run Text="â€¢ NÃ£o move o cursor durante a operaÃ§Ã£o"/>
                            <LineBreak/>
                            <Run Text="â€¢ Ideal para manter status ativo no Teams e outros apps"/>
                            <LineBreak/>
                            <Run Text="â€¢ Use com moderaÃ§Ã£o e responsabilidade"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" 
               CornerRadius="8" Padding="15" Margin="0,20,0,0">
            <StackPanel>
                <TextBlock Text="Click Automation v1.0 - Desenvolvido por Caio Silva Figueredo
                    " 
                          FontSize="10" 
                          Foreground="{StaticResource TextSecondaryBrush}"
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
